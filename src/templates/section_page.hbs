			{{/each}} --}}

		</section>

		<article class="article">
			<header class="article-header">
				<h1 title="{{section.name}}" class="article-title">
					{{section.name}}
					{{#if section.internal}}
						<span class="icon-lock" title="{{t 'internal'}}"></span>
					{{/if}}
				</h1>
				{{#if section.description}}
					<p class="page-header-description">{{section.description}}</p>
				{{/if}}
			</header>


			{{#if section.articles}}
			<section>
				<h2 class="article-list-title">Scopri di pi√π:</h2>
					<ul class="article-list o-columns">
						{{#each section.articles}}
							<li class="article-list-item o-columns__item {{#if promoted}} article-promoted{{/if}}">
								<div class="article-list-wrapper">
									{{#if promoted}}
										<span data-title="{{t 'promoted'}}" class="icon-star"></span>
									{{/if}}
									<a href="{{url}}" class="article-list-link">{{title}}</a>
									<p>
										{{excerpt body}}
									</p>
									<a href="{{url}}" class="article-list-other">... altro</a>
								</div>
							</li>
						{{/each}}
					</ul>
				{{else}}
					<i class="section-empty">
						<a href="{{section.url}}">{{t 'empty'}}</a>
					</i>
				</section>
				{{/if}}




			{{pagination}}


		</article>
	</div>
</div>
