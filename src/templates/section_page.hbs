<section class="section">
	<div class="hero c-hero c-hero-internal">
		<div class="o-wrapper">
			<div class="c-hero__breadcrumbs">
				<nav class="sub-nav">
					<ol class="breadcrumbs">
  					<li title="Hype">
        			<a href="/hc/it">Home</a>
						</li>
	  				<li title="{{section.name}}">
      				<a href="{{section.url}}">{{section.name}}</a>
    				</li>
					</ol>
				</nav>
			</div>
			<div class="c-hero__search">
				{{search submit=false instant=true class='search search-full c-form c-form__hero-search'}}
			</div>

		</div>
	</div>

</section>

<div class="container-divider"></div>
<div class="o-wrapper">

	<div class="article-container" id="article-container">
		<section class="article-sidebar">
			<section class="section-articles collapsible-sidebar">
				<h3 class="collapsible-sidebar-title sidenav-title">{{section.name}}</h3>
				<ul class="e-list">
					{{#each section.articles}}
						<li>
							<a href="{{url}}" class="sidenav-item ">{{title}}</a>
						</li>
					{{/each}}
				</ul>
				{{#if section.more_articles}}
					<a href="{{section.url}}" class="article-sidebar-item">{{t 'see_more'}}</a>
				{{/if}}
			</section>

			{{!-- {{#each categories}}
			{{#each sections}}
